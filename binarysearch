package binarySearch;
import java.util.*;

class methods {
    Scanner sc = new Scanner(System.in);

    public void readelements(int[] arr, int n) {
        for (int i = 0; i < n; i++) {
            System.out.print("Enter " + (i + 1) + "th Element :");
            arr[i] = sc.nextInt();
        }
    }

    public void printelements(int[] arr) {
        System.out.print("Elements in Array : ");
        for (int i : arr) {
            System.out.print(i + "  ");
        }
        System.out.println();
    }

    public void selectionsort(int[] arr, int n) {
        int i, j, minindex, minele;
        for (i = 0; i < n; i++) {
            minindex = i;
            minele = arr[i];
            for (j = i + 1; j < n; j++) {
                if (minele > arr[j]) {
                    minele = arr[j];
                    minindex = j;
                }
            }
            if (minindex != i) {
                arr[minindex] = arr[i];
                arr[i] = minele;
            }
        }
    }

    public int binarysearch(int[] arr, int key, int left, int right) {
        int mid = (left + right) / 2;
        if (left > right) {
            return -404;
        } else if (arr[mid] == key) {
            return mid;
        } else if (arr[mid] < key) {
            return binarysearch(arr, key, mid + 1, right);
        } else {
            return binarysearch(arr, key, left, mid - 1);
        }
    }
}

public class binarySearch {
    public static void main(String args[]) {
        methods obj = new methods();
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter no of elements in array:");
        int n = sc.nextInt();
        int[] arr = new int[n];
        obj.readelements(arr, n);
        System.out.println("Before Sorting :");
        obj.printelements(arr);
        obj.selectionsort(arr, n);
        System.out.println("After Sorting :");
        obj.printelements(arr);
        System.out.print("Enter searching element:");
        int key = sc.nextInt();
        int result = obj.binarysearch(arr, key, 0, n - 1);
        if (result != -404) {
            System.out.println("Element Found at " + (result + 1) + " th position");
        } else {
            System.out.println("Element Not Found");
        }
    }
}

